def mas_larga():
    palabra1= input("Ingrese la primera palabra: ")
    palabra2 =input("Ingrese la segunda palabra: ")

    if (len(palabra1)) > (len(palabra2)):
        tama単o = len(palabra1) - len(palabra2)
        print ("La palabra" , palabra1, " tiene", tama単o, "letras mas que", palabra2)
    else:
        tama単o = len(palabra2) - len(palabra1)
        print ("La palabra" , palabra2, " tiene", tama単o, "letras mas que", palabra1)

mas_larga()
